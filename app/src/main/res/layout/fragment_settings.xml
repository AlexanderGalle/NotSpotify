<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000000"
    android:padding="15sp">


    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#F70000"
        android:textSize="30dp"
        />

    <EditText
        android:id="@+id/changeEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/emailTitle"
        android:layout_marginTop="10dp"
        android:textColor="#FEFFFD"
        android:textSize="25dp"
        android:background="@drawable/text_outline"

        />

    <TextView
        android:id="@+id/PwdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Reset Password"
        android:layout_below="@id/confrim"
        android:layout_marginTop="30dp"
        android:textColor="#FEFFFD"
        android:textSize="30dp"


        />


    <Button
        android:id="@+id/confrim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/changeEmail"
        android:background="#F70000"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/PwdTitle"
        android:background="#F70000"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="50dp"

        />
</RelativeLayout>